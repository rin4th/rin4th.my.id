---
import Icon from "astro-icon";

export type Props = {
	title: string;
	imageSource: string;
	description: string;
	href: string;
	demo: string | null;
	source: string;
};

const props = Astro.props as Props;
---

<div class="overflow-hidden text-left bg-stone-700 rounded">
	<img
		class="relative block w-full h-48 object-cover bg-white z-[2] border-b-2 border-cyan-900"
		src={props.imageSource}
		alt={props.title}
		loading="lazy"
	/>
	<div class="grid grid-rows-[auto_6rem_1fr] p-4">
		<a
			data-sveltekit-prefetch
			rel="prefetch"
			href={props.href}
			class="no-underline text-white md:hover:(text-cyan-700) text-xl font-heading font-semibold leading-normal transition-[all_ease-out_0.2s]"
		>
			{props.title}
		</a>
		<p class="font-serif leading-normal text-white mb-2 mb-4 text-lg">
			{props.description}
		</p>
		<div class="flex justify-end gap-1 mt-2">
			{
				props.demo !== null && (
					<a
						class="font-heading no-underline flex items-center gap-2 py-1 px-2 transition-[filter_ease-out_0.2s] text-white hover:text-gray-200"
						href={props.demo ? props.demo : "#"}
						target="_blank"
						rel="norel noreferrer"
					>
						<Icon class="w-6 h-6" name="ph:globe" /> Visit
					</a>
				)
			}
			<a
				class="font-heading no-underline flex items-center gap-2 py-1 px-2 transition-[filter_ease-out_0.2s] text-white hover:text-gray-200"
				href={props.source}
				target="_blank"
				rel="norel noreferrer"
			>
				<Icon class="w-6 h-6" name="fe:github" /> Source
			</a>
		</div>
	</div>
</div>

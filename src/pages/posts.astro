---
import { getCollection } from "astro:content";
import Posts from "~/components/Posts.svelte";
import MainLayout from "~/layouts/MainLayout.astro";

const posts = await getCollection("posts", ({ data }) => !data.draft);
const sortedPosts = posts.sort((a, b) => (a.data.date > b.data.date ? -1 : 1));
---

<MainLayout seo={{ title: "Posts" }}>
	<section class="max-w-[1080px] mx-auto pt-8 px-4 text-center">
		<h1
			class="font-heading uppercase relative inline-block text-3xl font-semibold text-white mb-10 before:(content-[] absolute -bottom-1 left-8 right-8 h-1 rounded-sm bg-cyan-600)"
		>
			All Posts
		</h1>
		<Posts client:visible posts={sortedPosts.map(({ data, slug }) => ({ ...data, slug }))} />
	</section>
</MainLayout>
